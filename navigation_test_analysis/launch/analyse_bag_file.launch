<?xml version="1.0"?>
<launch>
    <arg name="videoConfig" />
    <arg name="filepath" />
    <arg name="videofilepath" />
    <arg name="speed"      default="1" />
    <arg name="repository" default="fromBagfile" />

    <include file="$( find navigation_test_analysis )/launch/displayCamerasAndRecordScreen.launch">
        <arg name="videoConfig" value="$( arg videoConfig )" />
        <arg name="bagFilepath" value="$( arg filepath )" />
        <arg name="videoFilepath" value="$( arg videofilepath )" />
    </include>

    <node name="analyse_bag_file" pkg="navigation_test_analysis" type="worker.py" output="screen" required="true">
        <param name="~filepath"   value="$( arg filepath )" />
        <param name="~speed"      value="$( arg speed )" />
        <param name="~repository" value="$( arg repository )" />
    </node>
</launch>
